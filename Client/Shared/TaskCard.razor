<div class="border bg-white m-2">
    <div class="flex justify-between m-1">
        <div class="mr-2">@Client</div>
        <div>@(Estimate)h</div>
    </div>
    @if (Extended)
    {
        <div class="m-1">
            <h6 class="">@Name</h6>
        </div>
    }
</div>

@code {
    [Parameter] public string Client {get;set;}
    [Parameter] public float Estimate {get;set;}
    [Parameter] public bool Extended {get;set;} = false;
    [Parameter] public string Name {get;set;}
    [Parameter] public string Description {get;set;}


}