<div class="border border-l-4 bg-gray-100 m-2 max-w-xs">
    <div class="flex justify-between p-2">
        <div class="uppercase font-semibold mr-2">@Client</div>
        <div>@(Estimate)h</div>
    </div>
    @if (Extended)
    {
        <div class="m-1 p-2">
            <h6 class="text-lg">@Name</h6>
            <div class="text-sm">@Description</div>
        </div>
    }
</div>

@code {
    [Parameter] public string Client {get;set;}
    [Parameter] public float Estimate {get;set;}
    [Parameter] public bool Extended {get;set;} = false;
    [Parameter] public string Name {get;set;}
    [Parameter] public string Description {get;set;}


}